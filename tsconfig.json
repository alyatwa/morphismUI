{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    /* Bundler mode */
    "resolveJsonModule": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "./build/",
    "./lib/",
    "./.next/",
    "./node_modules"
  ],
  "include": [
    "src",
    ".next/types/**/*.ts",
    "**/*.js",
    "**/*.mdx",
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx"
, "postcss.config.cjs", "tailwind.config.cjs"  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
